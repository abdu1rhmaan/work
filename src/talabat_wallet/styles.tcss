/* ===== UNIFIED BASE WINDOW SYSTEM ===== */
/* ===== UNIFIED BASE WINDOW SYSTEM ===== */
BaseWindow {
    width: auto;
    height: auto;
    max-width: 90%;          /* üìè Requirement: Use max 90% */
    max-height: 90%;         /* üìè Requirement: Use max 90% */
    background: #1c2228;
    border: heavy $primary; 
    padding: 0;
    margin: 0;
    position: absolute;
    box-sizing: border-box;
    layer: popup;
    overflow: hidden;
}

BaseWindow .window-content {
    width: 100%;
    height: auto;           /* üìè Grows with content */
    max-height: 100%;       /* üìè But stays within BaseWindow limits */
    padding: 1 2;
    overflow-y: auto;       /* üíå Enable scroll if content is too tall */
    scrollbar-gutter: stable;
}

.window-content ListView, 
.window-content DataTable {
    height: auto;           /* üìè Shrink to content */
    min-height: 1;          /* üìè 1 row minimum */
    max-height: 12;         /* üìè Scroll after 12 rows */
    overflow-y: auto;       
    margin-bottom: 1;
    scrollbar-gutter: stable;
}

#history-content {
    height: auto;
    width: 100%;
}

#resize_handle {
    dock: bottom;
    width: 100%;
    height: 1;
    content-align: right bottom;
    color: $primary-lighten-2;
    background: transparent;
    padding-right: 1;
}

#resize_handle:hover {
    color: $accent;
}

BaseWindow:focus-within {
    border: heavy $accent;  
}

/* üèóÔ∏è Standardized Window Content */
BaseWindow .window-content {
    width: 100%;
    padding: 1 2;
    background: transparent;
    overflow-y: auto; 
    scrollbar-gutter: stable;
}

BaseWindow#wallet-dialog .window-content {
    overflow-y: hidden; 
}

#expense-list {
    height: 1fr;
    max-height: 20;
    overflow-y: auto;         /* üíå Requirement: Only the list scrolls */
    scrollbar-gutter: stable;
}
